<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todo_item_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/dimen12dp"
    android:paddingHorizontal="@dimen/dimen24dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/todo_icon"
        android:layout_width="@dimen/dimen24dp"
        android:layout_height="@dimen/dimen24dp"
        android:layout_marginEnd="@dimen/dimen12dp"
        android:contentDescription="@string/generic_img_copy"
        app:tint="?attr/colorPrimary"
        tools:src="@drawable/ic_merge_request"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/todo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Review merge request #7"
            android:textSize="@dimen/dimen16sp"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/todo_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="gitlab-org/gitlab-foss"
            android:textSize="@dimen/dimen14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimen2dp"/>

        <TextView
            android:id="@+id/todo_time_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 hours ago â€¢ Assigned to you"
            android:textSize="@dimen/dimen12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:alpha="0.8"
            android:layout_marginTop="@dimen/dimen4dp"/>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/dimen40dp"
        android:layout_height="@dimen/dimen40dp"
        app:cardCornerRadius="@dimen/dimen32dp"
        app:cardElevation="@dimen/dimen0dp"
        android:backgroundTint="@android:color/transparent"
        app:strokeWidth="@dimen/dimen0dp">

        <ImageView
            android:id="@+id/todo_check"
            android:layout_width="@dimen/dimen32dp"
            android:layout_height="@dimen/dimen32dp"
            android:padding="@dimen/dimen6dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/mark_as_done"
            app:tint="?attr/colorOnSurfaceVariant"
            android:src="@drawable/ic_check"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>