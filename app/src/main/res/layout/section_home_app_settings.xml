<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen16dp"
    android:layout_marginTop="@dimen/dimen20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/app_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimen8dp"/>

    <!-- Single card container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen16dp"
        app:cardElevation="@dimen/dimen0dp"
        style="?attr/materialCardViewElevatedStyle"
        android:backgroundTint="?attr/inputBackgroundColor"
        app:strokeWidth="@dimen/dimen0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen4dp"
            android:paddingBottom="@dimen/dimen4dp">

            <!-- Notes -->
            <LinearLayout
                android:id="@+id/notes_frame"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen16dp"
                android:paddingEnd="@dimen/dimen16dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/notes_icon"
                    android:layout_width="@dimen/dimen40dp"
                    android:layout_height="@dimen/dimen40dp"
                    android:contentDescription="@string/notes"
                    android:src="@drawable/ic_notes_home"
                    app:tint="?attr/iconsColor" />

                <TextView
                    android:id="@+id/notes_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/dimen16dp"
                    android:paddingEnd="@dimen/dimen4dp"
                    android:text="@string/notes"
                    android:textSize="@dimen/dimen16sp" />

                <TextView
                    android:id="@+id/notes_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dimen24dp"
                    android:minWidth="@dimen/dimen24dp"
                    android:maxLength="3"
                    android:paddingStart="@dimen/dimen6dp"
                    android:paddingEnd="@dimen/dimen6dp"
                    android:gravity="center"
                    android:textSize="@dimen/dimen14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dimen72dp"
                android:background="?attr/colorOutline"
                android:alpha="0.08"/>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/settings_frame"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen16dp"
                android:paddingEnd="@dimen/dimen16dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="@dimen/dimen40dp"
                    android:layout_height="@dimen/dimen40dp"
                    android:contentDescription="@string/settings"
                    android:src="@drawable/ic_settings_home"
                    app:tint="?attr/iconsColor" />

                <TextView
                    android:id="@+id/settings_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/dimen16dp"
                    android:paddingEnd="@dimen/dimen4dp"
                    android:text="@string/settings"
                    android:textSize="@dimen/dimen16sp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>