<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen6dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="@dimen/dimen0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/dimen12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/todo_icon"
                    android:layout_width="@dimen/dimen24dp"
                    android:layout_height="@dimen/dimen24dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:contentDescription="@string/generic_img_copy"
                    app:tint="?attr/colorPrimary"
                    android:src="@drawable/ic_merge_request"/>

                <!-- Title -->
                <TextView
                    android:id="@+id/todo_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <!-- Check button -->
                <ImageView
                    android:id="@+id/todo_check"
                    android:layout_width="@dimen/dimen20dp"
                    android:layout_height="@dimen/dimen20dp"
                    android:layout_marginStart="@dimen/dimen8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/mark_as_done"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:src="@drawable/ic_check"/>

            </LinearLayout>

            <!-- Project name -->
            <TextView
                android:id="@+id/todo_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dimen8dp"
                android:layout_marginStart="@dimen/dimen44dp"/>

            <!-- Time and action -->
            <TextView
                android:id="@+id/todo_time_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:alpha="0.8"
                android:layout_marginTop="@dimen/dimen4dp"
                android:layout_marginStart="@dimen/dimen44dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>