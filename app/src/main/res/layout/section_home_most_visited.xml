<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen12dp"
    android:layout_marginTop="@dimen/dimen20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen8dp">

        <TextView
            android:id="@+id/most_visited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/most_visited"
            android:textSize="@dimen/dimen20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/clear_most_visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen8dp"
            app:cardElevation="@dimen/dimen0dp"
            app:strokeWidth="@dimen/dimen0dp"
            android:backgroundTint="?attr/inputBackgroundColor"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dimen8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:textSize="@dimen/dimen14sp"
                android:textColor="?attr/colorPrimary"
                android:paddingVertical="@dimen/dimen6dp"
                android:paddingHorizontal="@dimen/dimen16dp"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Single card container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen16dp"
        app:cardElevation="@dimen/dimen0dp"
        style="?attr/materialCardViewElevatedStyle"
        android:backgroundTint="?attr/inputBackgroundColor"
        app:strokeWidth="@dimen/dimen0dp">

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/nothing_found_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/dimen40dp"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/dimen48dp"
                android:layout_height="@dimen/dimen48dp"
                android:contentDescription="@string/most_visited_empty_message"
                android:src="@drawable/ic_trending"
                android:layout_marginBottom="@dimen/dimen16dp"
                app:tint="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/nothing_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/most_visited_empty_message"
                android:textSize="@dimen/dimen14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_most_visited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen8dp"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>